<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
                  "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<bean id="triangle" class="beans.Triangle" scope="prototype">
		<property name="points">
		<list>
			<ref  bean="zeropoint"/>
			<ref bean="point1"/>
			<ref bean="point2" />
		</list>
		</property>
		<property name="setpoints">
		<set>
			<ref  bean="zeropoint"/>
			<ref bean="point1"/>
			<ref bean="point2" />
		</set>
		</property>
		<property name="mappoints">
		<map>
			<entry key="1" value-ref="zeropoint"/>
			<entry key="2" value-ref="point1"/>
			<entry key="3" value-ref="point2" />
		</map>
		</property>
	</bean>

	<bean id="zeropoint" class="beans.point">
		<property name="x" value="${pointA.pointX}"></property>
		<property name="y" value="${pointA.pointY}"></property>
	</bean>

	<bean id="point1" class="beans.point">
		<property name="x" value="20"></property>
		<property name="y" value="0"></property>
	</bean>

	<bean id="point2" class="beans.point">
		<property name="x" value="0"></property>
		<property name="y" value="20"></property>
	</bean>

<!-- 	
	<bean class="beans.BeanPostProcessorClass"/>
 
  <bean class="beans.BeanFactoryPostProcessorClass"/>
 -->
  
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
  <property name="location" value="placeholder.properties" />
  </bean>
  
</beans>